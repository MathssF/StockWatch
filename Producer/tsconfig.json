{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "../node_modules/*"]
      },
      "resolveJsonModule": true
    },
    "include": [
      "**/*.ts",
      "../shared/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  