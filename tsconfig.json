{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",  // Define a base URL para resolução de módulos
      "paths": {
        "*": ["node_modules/*", "../node_modules/*"] // Adiciona um caminho extra para o node_modules da raiz
      },
    },
    "include": [
      "producer/**/*.ts",
      "consumer/**/*.ts",
      "shared/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  